<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.dong.demo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <!-- 访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 访问储存卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 读取联系人 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!--  -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="cn.dong.demo.DongApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cn.dong.demo.ui.main.MainActivity"
            android:theme="@style/AppTheme.Main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="cn.dong.demo.ui.SwipeRefreshLayoutActivity" />
        <activity android:name="cn.dong.demo.ui.fragment.FragmentTabHostActivity" />
        <activity android:name="cn.dong.demo.ui.location.GeocoderActivity" />
        <activity android:name="cn.dong.demo.ui.calendar.CalendarActivity" />
        <activity android:name="cn.dong.demo.ui.IntentsActivity" />
        <activity android:name="cn.dong.demo.ui.PackageManagerActivity" />
        <activity android:name="cn.dong.demo.ui.DialogActivity" />
        <activity android:name="cn.dong.demo.ui.AutoCompleteActivity" />
        <activity android:name="cn.dong.demo.ui.ViewPagerActivity" />
        <activity android:name="cn.dong.demo.ui.TextSizeActivity" />
        <activity android:name="cn.dong.demo.ui.ContentProviderActivity" />
        <activity android:name="cn.dong.demo.ui.ShareActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity android:name="cn.dong.demo.ui.AnimeActivity" />
        <activity android:name="cn.dong.demo.ui.DrawerActivity" />
        <activity android:name="cn.dong.demo.ui.PopupWindowActivity" />
        <activity android:name="cn.dong.demo.ui.touch.TouchEventActivity" />
        <activity android:name="cn.dong.demo.ui.WebViewActivity" />
        <activity android:name="cn.dong.demo.ui.fragment.FragmentTestActivity" />

        <!-- Image -->
        <activity android:name="cn.dong.demo.ui.image.DrawableStateActivity" />
        <activity android:name="cn.dong.demo.ui.image.ImageLoaderActivity" />
        <activity android:name="cn.dong.demo.ui.image.ImageActivity" />

        <!-- List -->
        <activity android:name="cn.dong.demo.ui.list.XListViewActivity" />
        <activity android:name="cn.dong.demo.ui.list.WaterfallActivity" />
        <activity android:name="cn.dong.demo.ui.list.ListViewActivity" />
        <activity android:name="cn.dong.demo.ui.list.RecyclerViewActivity" />

        <!-- Video -->
        <activity android:name="cn.dong.demo.ui.video.VParserActivity" />
        <activity android:name="cn.dong.demo.ui.video.VideoPlayerActivity" />

        <provider
            android:name="cn.dong.demo.provider.MyProvider"
            android:authorities="cn.dong.demo.provider"
            android:exported="false" />
    </application>

</manifest>